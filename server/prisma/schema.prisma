generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  username  String     @unique
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  portfolio Portfolio?

  @@map("users")
}

model Portfolio {
  id          String       @id @default(uuid())
  userId      String       @unique
  fullName    String
  title       String
  bio         String
  imageUrl    String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  blogs       Blog[]
  educations  Education[]
  experiences Experience[]
  languages   Language[]
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  projects    Project[]
  skills      Skill[]

  @@map("portfolios")
}

model Experience {
  id          String    @id @default(uuid())
  portfolioId String
  company     String
  position    String
  description String?
  startDate   DateTime
  endDate     DateTime?
  createdAt   DateTime  @default(now())
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  @@map("experiences")
}

model Education {
  id          String    @id @default(uuid())
  portfolioId String
  institution String
  degree      String
  field       String
  startYear   Int
  endYear     Int?
  createdAt   DateTime  @default(now())
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  @@map("educations")
}

model Skill {
  id          String    @id @default(uuid())
  portfolioId String
  name        String
  level       String?
  createdAt   DateTime  @default(now())
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  @@map("skills")
}

model Language {
  id          String    @id @default(uuid())
  portfolioId String
  name        String
  level       String?
  createdAt   DateTime  @default(now())
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  @@map("languages")
}

model Project {
  id           String    @id @default(uuid())
  portfolioId  String
  title        String
  description  String?
  technologies String?
  link         String?
  imageUrl     String?
  createdAt    DateTime  @default(now())
  portfolio    Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  @@map("projects")
}

model Blog {
  id          String    @id @default(uuid())
  portfolioId String
  title       String
  content     String?
  link        String?
  imageUrl    String?
  createdAt   DateTime  @default(now())
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  @@map("blogs")
}